@inherits LayoutComponentBase

<div class="bg-info text-white p-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <span class="navbar-brand m-lg-2">Book Store Admin</span>
            </div>
            <div class="col-2 text-right">
                <a class="btn btn-sm btn-primary" href="/account/logout">Logout</a>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row p-2">
        <div class="col-3 d-grid">
            <div class="d-grid gap-2">
                <NavLink class="btn btn-outline-primary"
                         href="/admin/books"
                         ActiveClass="btn btn-primary text-white"
                         Match="NavLinkMatch.Prefix">Books</NavLink>

                <NavLink class="btn btn-outline-primary"
                         href="/admin/shipped"
                         ActiveClass="btn btn-primary text-white"
                         Match="NavLinkMatch.Prefix">Shipped</NavLink>
            </div>
        </div>
        <div class="col">
            @Body
        </div>
    </div>
</div>